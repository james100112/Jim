        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "\n",
        "# Load the data\n",
        "data = pd.read_csv('/mnt/data/FTIR samples.csv')\n",
        "\n",
        "# Define the offsets\n",
        "offsets = {\n",
        "    \"SD\": 0,\n",
        "    \"ASSD\": 30.30,\n",
        "    \"ANSD\": 100.79,\n",
        "    \"APSD\": 140.77\n",
        "}\n",
        "\n",
        "# Filter the data to include only wavelengths >= 4000\n",
        "data_filtered = data[data['Wavelength'] >= 4000]\n",
        "\n",
        "# Plot all the data in a single plot with the specified offsets, and adjust the position of the dashed line labels\n",
        "plt.figure(figsize=(14, 10))\n",
        "\n",
        "# Plotting the data with the specified offsets\n",
        "plt.plot(data_filtered['Wavelength'], data_filtered['SD'] + offsets['SD'], label='SD', color='blue')\n",
        "plt.plot(data_filtered['Wavelength'], data_filtered['ASSD'] + offsets['ASSD'], label='ASSD', color='green')\n",
        "plt.plot(data_filtered['Wavelength'], data_filtered['ANSD'] + offsets['ANSD'], label='ANSD', color='red')\n",
        "plt.plot(data_filtered['Wavelength'], data_filtered['APSD'] + offsets['APSD'], label='APSD', color='purple')\n",
        "\n",
        "# Adding a dashed line at wavelength 1384\n",
        "plt.axvline(x=1384, color='grey', linestyle='--')\n",
        "# Adding a label \"N-O stretch\" 5 units lower than the previous position, below the blue line (SD) at wavelength 1384\n",
        "plt.text(1384, data_filtered.loc[data_filtered['Wavelength'] == 1384, 'SD'].values[0] + offsets['SD'] - 10, 'N-O stretch', fontsize=12, va='center', ha='center', backgroundcolor='w')\n",
        "# Adding a label \"1384\" at the top of the dashed line at 1384\n",
        "plt.text(1384, data_filtered['APSD'].max() + offsets['APSD'] + 10, '1384', fontsize=12, va='center', ha='center', backgroundcolor='w')\n",
        "\n",
        "# Adding a dashed line at wavelength 617\n",
        "plt.axvline(x=617, color='grey', linestyle='--')\n",
        "# Adding a label \"S-O bends\" 5 units above the previous position near the green line (ASSD) at wavelength 617\n",
        "plt.text(617, data_filtered.loc[data_filtered['Wavelength'] == 617, 'ASSD'].values[0] + offsets['ASSD'] + 20, 'S-O bends', fontsize=12, va='center', ha='center', backgroundcolor='w')\n",
        "# Adding a label \"617\" at the top of the dashed line at 617\n",
        "plt.text(617, data_filtered['APSD'].max() + offsets['APSD'] + 10, '617', fontsize=12, va='center', ha='center', backgroundcolor='w')\n",
        "\n",
        "# Adding titles and labels\n",
        "plt.xlabel('Wavelength', fontsize=14)\n",
        "plt.ylabel('Transmittance (%)', fontsize=14)\n",
        "\n",
        "# Reversing the x-axis to start from 4000 and decrease to the right\n",
        "plt.xlim(4000, data_filtered['Wavelength'].min())\n",
        "\n",
        "# Removing the y-axis numbers\n",
        "plt.yticks([])\n",
        "\n",
        "# Adding a legend\n",
        "plt.legend()\n",
        "\n",
        "# Display the plot without grid lines\n",
        "plt.grid(False)\n",
        "plt.show()\n"
      ]
